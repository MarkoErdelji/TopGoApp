<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:padding="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="50sp"
            android:id="@+id/type_seats_holder">
            <TextView
                android:id="@+id/title_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10sp"
                android:text="Refer a friend?"
                android:textColor="@color/black">

            </TextView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_type"
                android:layout_centerHorizontal="true"
                android:id = "@+id/refer_arrow">
            <EditText
                android:id="@+id/refer_a_friend_text"
                android:layout_width="170sp"
                android:background="@drawable/edit_text"
                android:layout_marginBottom="20sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:spinnerMode="dropdown"/>

                <ImageView
                    android:background="@drawable/ic_action_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/refer_a_friend_text" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/create_ride_button_layout"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_below="@id/refer_arrow"
                android:gravity="center|bottom"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/back_button"
                    android:id="@+id/step3_back_button"
                    android:layout_width="100dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_marginEnd="25dp"
                    android:text="@string/back"
                    android:layout_height="45dp" />

                <Button
                    android:background="@drawable/edit_text"
                    android:id="@+id/step4_button"
                    android:layout_width="100dp"
                    android:layout_toRightOf="@id/step3_back_button"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"
                    android:text="Next"
                    android:layout_height="45dp" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>