<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:padding="10sp">
        <RelativeLayout
            android:id="@+id/route"
            android:layout_width="190sp"
            android:layout_height="110sp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/index" /></RelativeLayout>

        <RelativeLayout
            android:id="@+id/rideInfoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/route"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/dateTextView"
                android:text="@string/date"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/begginingTextView"
                android:text="@string/begging"
                android:layout_below="@id/dateTextView"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"/>
            <TextView
                android:id="@+id/endTextView"
                android:text="@string/end"
                android:layout_below="@id/begginingTextView"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"/>
            <TextView
                android:id="@+id/priceTextView"
                android:text="@string/price"
                android:layout_below="@id/endTextView"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>