<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topgo"
            android:textSize="50sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop = "20sp"
            android:layout_marginBottom="40sp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoText"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_edges_layout"
            android:padding="20sp"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            tools:ignore="RtlSymmetry">
            <RelativeLayout
                android:id="@+id/usernameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                >

                <TextView
                    android:id="@+id/usernameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/username"
                    android:layout_marginEnd="15sp"/>
                <EditText
                    android:id="@+id/usernameTextBox"
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/usernameText"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/passwordLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/usernameLayout"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/passwordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/password"
                    android:layout_marginEnd="15sp"/>
                <EditText
                    android:id="@+id/paswordTextBox"
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/passwordText"
                    android:inputType="textPassword"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/loginButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/passwordLayout"
                android:layout_marginTop="20sp"
                >
                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20sp"
                    android:text="@string/login"/>
                <Button

                    android:id="@+id/reserveLoginButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/loginButton"
                    android:text="@string/rlogin"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/registerButton"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:layout_marginTop="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_registered_create_accout"
                android:layout_below="@id/loginButtonLayout"
                />

        </RelativeLayout>




    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>