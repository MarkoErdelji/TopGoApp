<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UberApp_Tim6" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/backgroundC</item>
        <item name="colorPrimary">@color/primaryC</item>
        <item name="colorPrimaryVariant">@color/primaryC</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/silverSand</item>
        <item name="colorSecondaryVariant">@color/silverSand</item>
        <item name="colorOnSecondary">@color/textC</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryC</item>
        <item name="background">@color/backgroundC</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:fontFamily">@font/chakrapetch</item>
        <item name="android:textColor">#000000</item>

        <item name="android:textSize">15sp</item>
    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:maxWidth">40dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:width">40dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/primaryC</item>
    </style>
</resources>